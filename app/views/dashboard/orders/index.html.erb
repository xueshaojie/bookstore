<h1>我的订单</h1>
<div class="row">
  <div class="container">
    <% Order.all.each do |order| %>
      <div class="media shopping-cart-row">
        <div class="media-left">
          <%= image_tag order.product.image.url(:avatar), class: 'media-object', alt: order.product.title %>
        </div>
        <div class="media-body">
          <h4 class="media-heading">订单号: <%= order.order_no %></h4>
          <p><%= order.product.title %></p>
          <p>数量: <%= order.amount %> 价格: ¥<%= order.total_money %></p>
        </div>
      </div>
    <% end -%>

    <%= will_paginate @orders %>
  </div>
</div>
