<div style="margin-top:150px;margin-bottom:30px;line-height:275%;">
    <h1 class="text-center", style="color:black;">注册</h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
  <%= devise_error_messages! %>
</div>


<div class="form-group">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <%= f.email_field :email, label: "邮箱", autofocus: true , class: "form-control" ,placeholder: "邮箱"%>
    </div>
</div>

<div class="form-group">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
      <%= f.password_field :password, label: "密码", required: true, class: "form-control", placeholder: "密码", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    </div>
</div>

<div class="form-group">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
      <%= f.password_field :password_confirmation, label: "密码确认", class: "form-control", placeholder: "确认密码", required: true %>
    </div>
</div>

<div class="form-group">
  <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
      <%= f.submit "注册", class: "btn btn-primary",:style => "border: none;color:white;width:100%;background-color:black;border-radius:50px;" %>
  </div>
</div>

<div class="form-group">
  <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
      <%= render "devise/shared/links" %>
  </div>
</div>
<% end %>
