<div>
  <div class="pull-right">
    <%= link_to "新建商品", new_admin_product_path, class: "btn btn-primary" %>
  </div>

  <h1>
    商品(<%= @products.total_entries %>)
  </h1>
</div>

<div>
  <table class="table table-hover table-bordered table-responsive">
    <tr>
      <th>ID</th>
      <th width="220"></th>
      <th>名称</th>
      <th>UUID/SKU</th>
      <th>Price</th>
      <th>库存</th>
      <th>Author</th>
      <th></th>
    </tr>

    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td>
          <%= image_tag(product.image.thumb, class: "thumbnail") %>
        </td>
        <td><%= product.title %></td>
        <td><%= product.uuid %></td>
        <td><%= product.price %></td>
        <td><%= product.amount %></td>
        <td><%= product.author %></td>
        <td align="right">
          <%= link_to "编辑", edit_admin_product_path(product) %>
          <%= link_to "删除", admin_product_path(product), method: :delete, 'data-confirm': "确认删除吗?" %>
          <%#= link_to "图片管理", admin_product_photos_path(product_id: product) %>
        </td>
      </tr>
    <% end -%>
  </table>

  <%= will_paginate @products %>
</div>
